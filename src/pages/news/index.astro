---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';

const news = await getCollection('news');

const sortedNews = news
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .map(item => ({
    ...item,
    slug: item.data.slug || item.slug,
  }));
---

<html lang="es">
  <head>
    <BaseHead title={`Noticias | ${SITE_TITLE}`} />
    <style>
      html, body {
  margin: 0;
  padding: 0;
  min-height: 100%;
  background-color: #fafafa;
  overflow-x: hidden;
  font-family: 'Inter', system-ui, sans-serif;
}

body {
  display: flex;
  flex-direction: column;
  color: #222;
}

main {
  flex: 1;
  max-width: 1100px;
  margin: 0 auto;
  padding: 3rem 1rem;
}

/* --- Título --- */
h1, .subtitle {
  margin-left: 12px;
  margin-right: 12px;
  word-break: break-word; /* Evita que textos largos sobresalgan */
}


p.subtitle {
  text-align: center;
  color: #374151;
  font-size: clamp(1rem, 3.5vw, 1.1rem);
  margin-bottom: 2.5rem;
}

/* --- GRID DE NOTICIAS --- */
.news-grid {
  display: grid;
  gap: 1.5rem;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); /* ✔ más cómodo */
}

/* --- Tarjeta --- */
.card {
  background: #f8f9fa;
  border-radius: 14px;
  overflow: hidden;
  border: 1px solid #e0e0e0;
  transition: transform 0.25s ease, box-shadow 0.25s ease;
  text-decoration: none;
  color: inherit;
  display: flex;
  flex-direction: column; /* ✔ para mejor control en móvil */
}

.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.07);
}

/* --- Imagen --- */
.card img {
  width: 100%;
  aspect-ratio: 16 / 9;
  object-fit: cover;
  background: #e5e7eb;
}

/* --- Contenido textual --- */
.card-content {
  padding: 1.2rem 0.9rem;
}
@media (max-width: 600px) {
  .card-content {
    padding: 1.1rem 1rem;
  }
}


.card-content h2 {
  font-size: 1.2rem;
  color: #1f2937;
  margin-bottom: 0.5rem;
  line-height: 1.3;
}

.card-content p {
  color: #4b5563;
  font-size: 0.95rem;
  margin-bottom: 1rem;
  line-height: 1.5;
}

.card-content small {
  color: #6b7280;
  font-size: 0.85rem;
}

/* --- Optimización móvil --- */
@media (max-width: 600px) {
  .card {
    max-width: 97vw;     /* le da margen a ambos lados */
    margin: 0 auto;      /* centra la tarjeta */
    border-radius: 14px; /* bordes más definidos */
    box-shadow: 0 4px 16px rgba(0,0,0,0.04);
  }
  .card img {
    border-top-left-radius: 14px;
    border-top-right-radius: 14px;
    margin-bottom: 0;
    aspect-ratio: 16 / 9; /* la relación suele funcionar mejor */
    object-fit: cover;
  }
  h1, .subtitle {
    margin-left: 8px;
    margin-right: 8px;
  }
}


    </style>
  </head>

  <body>
    <Header />

    <main>
      <div style="text-align: center; margin-top: 2rem;">
        <h1>Noticias</h1>
        <p class="subtitle">Descubre lo más reciente del Consejo Municipal</p>
      </div>

      <div class="news-grid">
        {sortedNews.map(item => (
          <a href={`/news/${item.id}/`} class="card">
            {item.data.heroImage && (
              <img 
                src={item.data.heroImage.src} 
                alt={item.data.title} 
                loading="lazy"
              />
            )}
            <div class="card-content">
              <h2>{item.data.title}</h2>
              <p>{item.data.description}</p>
              <small>
                {new Date(item.data.pubDate).toLocaleDateString('es-VE', {
                  year:'numeric',
                  month:'long',
                  day:'numeric'
                })}
              </small>
            </div>
          </a>
        ))}
      </div>
    </main>

    <Footer />
  </body>
</html>